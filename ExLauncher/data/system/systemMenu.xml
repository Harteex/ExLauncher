<?xml version="1.0" encoding="utf-8"?>
<LinearPanel
  width="*"
  height="80"
  orientation="vertical"
  layoutGravity="center_vertical"
  layoutMargin="0"
  background="#202020">

  <ListView
    id="inputView"
    width="wrap_content"
    height="40"
    orientation="horizontal"
    itemSize="52"
    layoutGravity="center_horizontal"
    layoutMargin="12 0 0 0">

    <FramePanel
      width="40"
      height="*"
      name="System Info"
      layoutGravity="center_horizontal"
      action="info">
      <Selector
        width="*"
        height="*">
        <State stateSelected="true">
          <RectangleShape
            width="*"
            height="*"
            strokeColor="white"
            strokeWidth="2" />
        </State>
      </Selector>
      <Image
        width="*"
        height="*"
        layoutMargin="4"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_info.png" />
    </FramePanel>

    <FramePanel
      width="40"
      height="*"
      name="Turn Off"
      layoutGravity="center_horizontal"
      action="shutdown">
      <Selector
        width="*"
        height="*">
        <State stateSelected="true">
          <RectangleShape
            width="*"
            height="*"
            strokeColor="white"
            strokeWidth="2" />
        </State>
      </Selector>
      <Image
        width="*"
        height="*"
        layoutMargin="4"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_shutdown.png" />
    </FramePanel>

    <FramePanel
      width="40"
      height="*"
      name="Reboot"
      layoutGravity="center_horizontal"
      action="reboot">
      <Selector
        width="*"
        height="*">
        <State stateSelected="true">
          <RectangleShape
            width="*"
            height="*"
            strokeColor="white"
            strokeWidth="2" />
        </State>
      </Selector>
      <Image
        width="*"
        height="*"
        layoutMargin="4"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_reboot.png" />
    </FramePanel>

    <FramePanel
      id="exitItem"
      width="40"
      height="*"
      name="Exit to Launcher"
      layoutGravity="center_horizontal"
      action="exit">
      <Selector
        width="*"
        height="*">
        <State stateSelected="true">
          <RectangleShape
            width="*"
            height="*"
            strokeColor="white"
            strokeWidth="2" />
        </State>
      </Selector>
      <Image
        width="*"
        height="*"
        layoutMargin="4"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_exit.png" />
    </FramePanel>
    
  </ListView>

  <Label
      id="selectionLabel"
      width="wrap_content"
      height="wrap_content"
      layoutGravity="center_horizontal"
      layoutMargin="6 0 0 0"
      text="testtext goes here" />

</LinearPanel>