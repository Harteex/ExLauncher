<?xml version="1.0" encoding="utf-8"?>
<LinearPanel
  width="*"
  height="80"
  orientation="vertical"
  layoutGravity="center_vertical"
  layoutMargin="0"
  background="#202020">

  <ListView
    id="inputView"
    width="wrap_content"
    height="32"
    orientation="horizontal"
    itemSize="48"
    layoutGravity="center_horizontal"
    layoutMargin="12 0 0 0">

    <FramePanel
      width="32"
      height="*">
      <Image
        width="*"
        height="*"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_info.png" />
    </FramePanel>

    <FramePanel
      width="32"
      height="*">
      <Image
        width="*"
        height="*"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_shutdown.png" />
    </FramePanel>

    <FramePanel
      width="32"
      height="*">
      <Image
        width="*"
        height="*"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_reboot.png" />
    </FramePanel>

    <FramePanel
      width="32"
      height="*">
      <Image
        width="*"
        height="*"
        layoutGravity="center_horizontal"
        path="data/graphics/ic_exit.png" />
    </FramePanel>
    
  </ListView>

  <Label
      width="wrap_content"
      height="wrap_content"
      layoutGravity="center_horizontal"
      layoutMargin="6 0 0 0"
      text="testtext goes here" />

</LinearPanel>