<?xml version="1.0" encoding="utf-8"?>
<ListView
  id="inputView"
  width="*"
  height="*"
  orientation="vertical"
  layoutMargin="5"
  itemSize="20"
  contentInset="100">
  <ListView.ItemTemplate>
    <FramePanel
      width="*"
      height="wrap_content">
      <Selector
        width="*"
        height="20">
        <State stateSelected="true">
          <Image
            width="*"
            height="*"
            path="@theme/markerBg.png"/>
        </State>
      </Selector>
    </FramePanel>
  </ListView.ItemTemplate>
  
  <Item
    action="screen:@theme/testoverview.xml:testvar=lol;testvar2=omg=bbq">
    <Label
      width="*"
      height="wrap_content"
      text="Press me {testvar}" />
  </Item>

  <Item
    action="screen:@theme/tab.xml">
    <Label
      width="*"
      height="wrap_content"
      text="Go to tab view (noarg)" />
  </Item>

  <Item
    action="screen:@theme/tab.xml:category=games">
    <Label
      width="*"
      height="wrap_content"
      text="Go to tab view (arg)" />
  </Item>

  <Item
    action="screen:@theme/list.xml">
    <Label
      width="*"
      height="wrap_content"
      text="Go to list view" />
  </Item>

  <Item
    action="screen:@theme/testrecent.xml">
    <Label
      width="*"
      height="wrap_content"
      text="Go to recent test view" />
  </Item>

</ListView>