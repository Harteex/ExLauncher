<?xml version="1.0" encoding="utf-8"?>
<LinearPanel
  id="inputView"
  width="*"
  height="*"
  orientation="vertical"
  layoutMargin="5"
  tag="fillItems|categories=applications,games">
  <LinearPanel.ItemTemplate>
    <FramePanel
      width="*"
      height="40">
      <Selector
        width="*"
        height="*">
        <State stateSelected="true">
          <Image
            width="*"
            height="*"
            path="@theme/markerBg.png"/>
        </State>
      </Selector>
      <LinearPanel
        width="*"
        height="*">
        <Image
          width="wrap_content"
          height="wrap_content"
          layoutGravity="center_vertical"
          layoutMargin="2"
          path="@theme/appIconDefault.png"/>
        <Label
          width="wrap_content"
          height="*"
          gravity="center_vertical"
          layoutMargin="6"
          text="{name}"/>
      </LinearPanel>
    </FramePanel>
  </LinearPanel.ItemTemplate>
</LinearPanel>