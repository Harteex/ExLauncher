<?xml version="1.0" encoding="utf-8"?>
<LinearPanel
  width="wrap_content"
  height="wrap_content"
  orientation="vertical">
  <FramePanel
    width="wrap_content"
    height="wrap_content">
    <Selector
      width="wrap_content"
      height="wrap_content"
      stateSelected="false">
      <Image
        width="wrap_content"
        height="wrap_content"
        path="@theme/appIconDefault.png"/>
    </Selector>
    <Selector
      width="wrap_content"
      height="wrap_content"
      stateSelected="true">
      <Image
        width="wrap_content"
        height="wrap_content"
        path="data/graphics/testicon2.png"/>
    </Selector>
  </FramePanel>
  <Label
    width="wrap_content"
    height="wrap_content"
    text="{name}"/>
</LinearPanel>