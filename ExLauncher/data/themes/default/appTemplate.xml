<?xml version="1.0" encoding="utf-8"?>
<LinearPanel
  width="wrap_content"
  height="wrap_content"
  orientation="vertical"
  layoutGravity="center_horizontal">
  <Selector
    width="wrap_content"
    height="wrap_content"
    layoutGravity="center_horizontal">
    <State stateSelected="false">
      <Image
        width="wrap_content"
        height="wrap_content"
        path="@theme/appIconDefault.png"/>
    </State>
    <State stateSelected="true">
      <Image
        width="wrap_content"
        height="wrap_content"
        path="data/graphics/testicon2.png"/>
    </State>
  </Selector>
  <Label
    width="wrap_content"
    height="wrap_content"
    text="{name}"
    layoutGravity="center_horizontal"/>

</LinearPanel>