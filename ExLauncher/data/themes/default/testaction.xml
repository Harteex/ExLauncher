<?xml version="1.0" encoding="utf-8"?>
<GridView
  id="inputView"
  width="match_parent"
  height="match_parent"
  orientation="vertical"
  itemCountSecondaryDirection="1"
  layoutMargin="5">
  <GridView.ItemTemplate>
    <FramePanel
      width="200"
      height="wrap_content">
      <Selector
        width="match_parent"
        height="20">
        <State stateSelected="true">
          <Image
            width="match_parent"
            height="match_parent"
            path="@theme/markerBg.png"/>
        </State>
      </Selector>
    </FramePanel>
  </GridView.ItemTemplate>
  
  <Item
    action="screen:@theme/testaction.xml:testvar=lol;testvar2=omg=bbq">
    <Label
      width="match_parent"
      height="wrap_content"
      text="Press me {testvar}" />
  </Item>

  <Item
    action="screen:@theme/tab.xml">
    <Label
      width="match_parent"
      height="wrap_content"
      text="Go to tab view (noarg)" />
  </Item>

  <Item
    action="screen:@theme/tab.xml:category=games">
    <Label
      width="match_parent"
      height="wrap_content"
      text="Go to tab view (arg)" />
  </Item>

  <Item
    action="screen:@theme/list.xml">
    <Label
      width="match_parent"
      height="wrap_content"
      text="Go to list view" />
  </Item>

</GridView>