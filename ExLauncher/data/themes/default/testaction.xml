<?xml version="1.0" encoding="utf-8"?>
<GridView
  id="inputView"
  width="match_parent"
  height="match_parent"
  orientation="vertical"
  itemCountSecondaryDirection="1"
  itemTemplate="@theme/appTemplate.xml"
  layoutMargin="5">
  <FramePanel
    width="200"
    height="wrap_content"
    action="screen:@theme/testaction.xml:testvar=lol">
    <Selector
      width="match_parent"
      height="20">
      <State stateSelected="true">
        <Image
          width="match_parent"
          height="match_parent"
          path="@theme/markerBg.png"/>
      </State>
    </Selector>
    <Label
      width="match_parent"
      height="wrap_content"
      text="Press me {testvar}" />
  </FramePanel>
  <FramePanel
    width="200"
    height="wrap_content"
    action="screen:@theme/tab.xml">
    <Selector
      width="match_parent"
      height="20">
      <State stateSelected="true">
        <Image
          width="match_parent"
          height="match_parent"
          path="@theme/markerBg.png"/>
      </State>
    </Selector>
  <Label
    width="match_parent"
    height="wrap_content"
    text="Go to tab view (noarg)" />
  </FramePanel>
  <FramePanel
    width="200"
    height="wrap_content"
    action="screen:@theme/tab.xml:category=games">
    <Selector
      width="match_parent"
      height="20">
      <State stateSelected="true">
        <Image
          width="match_parent"
          height="match_parent"
          path="@theme/markerBg.png"/>
      </State>
    </Selector>
  <Label
    width="match_parent"
    height="wrap_content"
    text="Go to tab view (arg)" />
  </FramePanel>
</GridView>