<?xml version="1.0" encoding="utf-8"?>
<LinearPanel
  xmlns="http://schemas.exlauncher.com/exlauncher"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://schemas.exlauncher.com/exlauncher ../../schema/screen.xsd"
  width="*"
  height="*"
  orientation="vertical">
  <Label
    width="280"
    height="content"
    layoutMargin="2 0 20 0"
    text="{categoryName}"
    textSize="24"
    textColor="white"
    font="light" />
  <GridView
    id="inputView"
    tag="fillItems|categories={category}"
    width="*"
    height="*"
    orientation="vertical"
    itemTemplate="@theme/appTemplate.xml"
    itemWidth="77"
    itemHeight="54"
    layoutMargin="4 5 5 5"
    verticalSpacing="8"
    contentInset="0 5"
    background="#50000000">
  </GridView>
</LinearPanel>