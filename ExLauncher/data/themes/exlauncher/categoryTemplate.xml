<?xml version="1.0" encoding="utf-8"?>
<FramePanel
  xmlns="http://schemas.exlauncher.com/exlauncher"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://schemas.exlauncher.com/exlauncher ../../schema/screen.xsd"
  width="*"
  height="*"
  background="#9d9d9d"
  action="screen:@theme/apps.xml:category={category};categoryName={categoryName}">
  <Selector
      width="*"
      height="*">
    <State stateSelected="true">
      <RectangleShape
        width="*"
        height="*"
        strokeColor="white"
        strokeWidth="2" />
    </State>
  </Selector>
  <Image
      width="content"
      height="content"
      path="@theme/tilehighlight.png" />
  <Image
    width="32"
    height="32"
    layoutMargin="12 0 0 0"
    layoutGravity="center_horizontal"
    path="@theme/ic_applications.png" />
  <Label
    width="*"
    height="content"
    text="{categoryName}"
    font="semibold"
    textColor="white"
    textSize="12"
    gravity="center_horizontal"
    layoutGravity="bottom"
    layoutMargin="0 4 0 0" />
</FramePanel>