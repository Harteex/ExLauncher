<?xml version="1.0" encoding="utf-8"?>
<GridView
  xmlns="http://schemas.exlauncher.com/exlauncher"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://schemas.exlauncher.com/exlauncher ../../schema/screen.xsd"
  id="inputView"
  width="*"
  height="*"
  orientation="horizontal"
  itemWidth="74"
  itemHeight="74"
  horizontalSpacing="8"
  verticalSpacing="8"
  contentInset="20"
  layoutMargin="10 10 0 0"
  tag="fillCategories|categories=-applications,-emulators,-games,-settings"
  itemTemplate="@theme/categoryTemplate.xml">

  <RecentAppView
    width="*"
    height="*"
    recentIndex="0"
    itemTemplate="@theme/recentAppTemplate.xml">
    <Item />
  </RecentAppView>

  <RecentAppView
  width="*"
  height="*"
  recentIndex="1"
  itemTemplate="@theme/recentAppTemplate.xml">
    <Item />
  </RecentAppView>

  <RecentAppView
  width="*"
  height="*"
  recentIndex="2"
  itemTemplate="@theme/recentAppTemplate.xml">
    <Item />
  </RecentAppView>

  <RecentAppView
  width="*"
  height="*"
  recentIndex="3"
  itemTemplate="@theme/recentAppTemplate.xml">
    <Item />
  </RecentAppView>

  <FramePanel
    width="*"
    height="*"
    background="#f43c46"
    action="screen:@theme/apps.xml:category=games;categoryName=Games">
    <Selector
      width="*"
      height="*">
      <State stateSelected="true">
        <RectangleShape
          width="*"
          height="*"
          strokeColor="white"
          strokeWidth="2" />
      </State>
    </Selector>
    <Image
      width="content"
      height="content"
      path="@theme/tilehighlight.png" />
    <Image
      width="32"
      height="32"
      layoutMargin="12 0 0 0"
      layoutGravity="center_horizontal"
      path="@theme/ic_games.png" />
    <Label
      width="*"
      height="content"
      text="Games"
      font="condensedbold"
      textColor="white"
      textSize="12"
      gravity="center_horizontal"
      layoutGravity="bottom"
      layoutMargin="0 4 0 0" />
  </FramePanel>

  <FramePanel
    width="*"
    height="*"
    background="#82bc41"
    action="screen:@theme/apps.xml:category=emulators;categoryName=Emulators">
    <Selector
      width="*"
      height="*">
      <State stateSelected="true">
        <RectangleShape
          width="*"
          height="*"
          strokeColor="white"
          strokeWidth="2" />
      </State>
    </Selector>
    <Image
      width="content"
      height="content"
      path="@theme/tilehighlight.png" />
    <Image
      width="32"
      height="32"
      layoutMargin="12 0 0 0"
      layoutGravity="center_horizontal"
      path="@theme/ic_emulators.png" />
    <Label
      width="*"
      height="content"
      text="Emulators"
      font="condensedbold"
      textColor="white"
      textSize="12"
      gravity="center_horizontal"
      layoutGravity="bottom"
      layoutMargin="0 4 0 0" />
  </FramePanel>

  <FramePanel
    width="*"
    height="*"
    background="#28a4ca"
    action="screen:@theme/apps.xml:category=applications;categoryName=Applications">
    <Selector
      width="*"
      height="*">
      <State stateSelected="true">
        <RectangleShape
          width="*"
          height="*"
          strokeColor="white"
          strokeWidth="2" />
      </State>
    </Selector>
    <Image
      width="content"
      height="content"
      path="@theme/tilehighlight.png" />
    <Image
      width="32"
      height="32"
      layoutMargin="12 0 0 0"
      layoutGravity="center_horizontal"
      path="@theme/ic_applications.png" />
    <Label
      width="*"
      height="content"
      text="Applications"
      font="condensedbold"
      textColor="white"
      textSize="12"
      gravity="center_horizontal"
      layoutGravity="bottom"
      layoutMargin="0 4 0 0" />
  </FramePanel>

  <FramePanel
    width="*"
    height="*"
    background="#f1cd31"
    action="screen:@theme/apps.xml:category=settings;categoryName=Settings">
    <Selector
      width="*"
      height="*">
      <State stateSelected="true">
        <RectangleShape
          width="*"
          height="*"
          strokeColor="white"
          strokeWidth="2" />
      </State>
    </Selector>
    <Image
      width="content"
      height="content"
      path="@theme/tilehighlight.png" />
    <Image
      width="32"
      height="32"
      layoutMargin="12 0 0 0"
      layoutGravity="center_horizontal"
      path="@theme/ic_settings.png" />
    <Label
      width="*"
      height="content"
      text="Settings"
      font="condensedbold"
      textColor="white"
      textSize="12"
      gravity="center_horizontal"
      layoutGravity="bottom"
      layoutMargin="0 4 0 0" />
  </FramePanel>

</GridView>